#!/usr/bin/python3

import sys

import processcontrol.crontab


def usage():
	print("Must give a job description directory as the only argument.")


if __name__ == "__main__":
    # TODO: Parse CLI args.

	if len(sys.argv) != 2:
		usage()
		sys.exit(-1)

	config_dir = sys.argv[1]

	print(processcontrol.crontab.make_cron(config_dir))
